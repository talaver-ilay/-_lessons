{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "g++-13 build",
			"command": "/usr/bin/g++-13",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${file}",
				"-fmodules-ts",
				"-std=c++20",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/bin/g++-13"
		}
	]
}